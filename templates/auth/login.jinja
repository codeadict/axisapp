{% extends "base.jinja" %}

{% block extra_css %}
  <link rel="stylesheet" href="{{ "css/login.css"|static }}">
{% endblock %}

{% block body_attr %}class="login_background"{% endblock %}
{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-md-4 col-sm-offset-4 col-md-offset-4">


        <div id="form-signin-container">
        <img src="{{ "app_logo.png"|static }}" class="img-responsive center-block" alt=Distribucion"
               style="margin-bottom: 20px;">
            <form class="form-signin" role="form" method="post" action="">{% csrf_token %}
              <h2 class="form-signin-heading">{{ _('Bienvenido') }}</h2>
              {% if login_form.non_field_errors() %}
                <div class="alert alert-danger" role="alert">
                  {% for err in login_form.non_field_errors() %}
                    <p>{{ err }}</p>
                  {% endfor %}
                </div>
              {% endif %}
              {# prevent chrome from auto filling password #}
              <input style="display:none" type="password" name="take_this_autofill"/>

              {{ login_form.username|safe }}
              {{ login_form.password|safe }}
              <p class="text-center">
                <button class="btn btn-lg btn-primary" type="submit">Acceder</button>
              </p>
            </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
