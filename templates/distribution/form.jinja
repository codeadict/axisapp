{% extends "page.jinja" %}
{% import 'macro/edit.jinja' as macros %}

{% block extra_css %}
  {{ super() }}
  <link rel="stylesheet" href="{{ "css/form.css"|static }}{% if debug %}?{% endif %}">
{% endblock %}

{% block content %}
  <form method="post" enctype="multipart/form-data">
    {% csrf_token %}{{ form.media|safe }}
    {{ form|bootstrap_columns(widths={'polygon': 12}) }}
    <input type="submit" value="{{ _('Save') }}" class="btn btn-primary" />
  </form>
{% endblock %}

{% block extra_js %}
  {{ super() }}
  <script>
    $(document).ready(function () {
      $('select').selectize();
    });
  </script>
{% endblock %}