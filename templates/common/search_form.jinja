{% if search_form %}
  <div class="col-md-3">
    {# this should be a function to work with other list displays #}
    <div class="panel panel-custom">
      <div class="panel-heading">
        <h3 class="panel-title">
          Search Box </h3>
      </div>
      <div class="panel-body">
        <form method="GET">
          {% for field in search_form %}
            {{ field|bootstrap }}
          {% endfor %}
          <p>
            <button type="submit" class="btn btn-primary">{{ _('Filter') }}</button>
            <a href="?" class="btn btn-default">{{ _('Reset') }}</a>
          </p>
        </form>

      </div>
    </div>
  </div>
{% endif %}